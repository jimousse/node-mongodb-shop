<%- include('../includes/head.ejs') %>

<body>
<%- include('../includes/header.ejs') %>
	<main class="content">
		<% if (orders.length===0) { %>
			<div class="orders">
				<h1 class="orders__name">No orders yet</h1>
			</div>   
		<% } else { %>
		<div class="orders">
			<h1 class="orders__name">Your orders</h1>
			<hr class="separator">
			<ul class="orders__list">
				<% orders.forEach(order=> { %>
					<li class="orders__item">
						<div class="orders__item-info">
							<span class="orders__item-id">Order # <%= order._id%></span>
							<span class="orders__item-total">Total: 
							<span class="orders__item-price">$<%= order.totalPrice%></span>
						</div>
						<ul class="products">
							<% order.items.forEach((product, i)=> { %>
								<li class="product">
									<div class="product__title"><%= product.title %></div>
									<div class="product__qty">Qty: <%= product.quantity %></div>
								</li>
								<% if (i < order.items.length - 1) {%>
									<hr class="separator">
								<% } %>
							<% }) %>
						</ul>
						<a href="/orders/<%=order._id%>">Invoice</a>
					</li>
				<% }); %>
			</ul>
		</div>
		<% } %>
	</main>
<%- include('../includes/end.ejs') %>